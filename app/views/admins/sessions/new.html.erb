<div class="container mt-5 mb-5">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-2 mr-4 text-center text-success">
        <h2><strong>〜 管理者ログイン 〜</strong></h2>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row my-3">
    <div class="field text-center">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row my-3">
    <div class="field text-center">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row my-3">
    <div class="actions text-center my-3">
      <%= f.submit "ログインする", class:"btn btn-outline-success" %>
    </div>
  </div>
<% end %>
</div>