<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand ml-5 mx-auto" href="/"> CInema Note</a>
      <div class="collapse navbar-collapse flex-grow-0 align-items-center direction-row" id="navbarColor03">
        <ul class="navbar-nav d-flex ">
          <!--ユーザーがログインしているとき-->
          <% if user_signed_in? %>
          <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-dark' do %>
            <i class="fas fa-sign-out-alt"></i> Log out
          <% end %>
          </li>
          <li class="nav-item">
            <%= link_to about_path ,class: 'nav-link text-dark' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to movies_path ,class: 'nav-link text-dark' do %>
              <i class="fas fa-film"></i> Movies
            <% end %>
          </li>
          <li class="nav-item">
          <%= link_to user_path(current_user),class: 'nav-link text-dark' do %>
            <i class="fas fa-user"></i> My page
          <% end %>
          </li>
          <div class="text-secondary d-flex align-items-center">
            <i class="fas fa-smile fa-spin fa-sm"></i> <strong><%= current_user.name %></strong> , Welcome！
          </div>

          <!--管理者がログインしているとき-->
          <% elsif admin_signed_in? %>
          <li class="nav-item">
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-dark' do %>
            <i class="fas fa-sign-out-alt"></i> Log out
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_users_path,class: 'nav-link text-dark' do %>
            <i class="fas fa-users"></i> Users
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_movies_path,class: 'nav-link text-dark' do %>
            <i class="fas fa-sign-out-alt"></i> Movies new
            <% end %>
          </li>
          <%= link_to "管理者", admin_root_path, class:"mt-2 ml-3 text-secondary" %>

          <!--ログインしていないとき-->
          <% else %>
          <li class="nav-item">
            <%= link_to new_user_registration_path,class: 'nav-link text-dark' do %>
              <i class="fas fa-user-plus"></i> Sign up
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path ,class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-in-alt"></i> Log in
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to about_path ,class: 'nav-link text-dark' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
      <%= render 'layouts/search', q_header: @q_header %>
    </div>
  </nav>
</header>