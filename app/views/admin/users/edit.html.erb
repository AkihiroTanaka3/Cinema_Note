<div class='container'>
  <div class='row mt-5'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, url: admin_user_path(@user), method: :patch, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
        <div class="text-end mt-4">
          <%= f.label "ステータス" %>
          <%= f.radio_button :membership_status, :false, class:"ml-3" %>
          <%= f.label :membership_status, "有効", class:"mr-3" %>
          <%= f.radio_button :membership_status, :true %>
          <%= f.label :membership_status, "退会" %>
        </div>
      <div class="form-group text-end">
        <%= f.submit "update user", data: { confirm: '更新しますか？' }, class: 'btn btn-secondary my-3' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
