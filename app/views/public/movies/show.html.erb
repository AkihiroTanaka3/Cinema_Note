<div class="contaiber">
  <div class="row">
    <div class="col-md-4 offset-sm-1 my-5">
      <%= image_tag 'https://image.tmdb.org/t/p/w342' + @movie.image, class: 'card-img' %>
    </div>
    <div class="col-md-6">
      <h2 class="mt-5"><%= @movie.name %></h2>
      <p>公開年：<%= @movie.year %></p>
      <p>ジャンル：<%= @movie.genre_name %></p>
      <p>上映時間：<%= @movie.runtime %>分</p>
      <p>あらすじ：<%= @movie.overview %></p>

        <%= form_with(model: [@movie, @review], url: movie_reviews_path(@movie), local: true) do |form| %>
        <% if @review.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

            <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :評価 %>
          <p><%= form.select :rate, [1, 2, 3, 4, 5] %></p>
        </div>

        <div class="field">
          <%= form.label :感想を書く %>
          <p><%= form.text_area :body, cols: 80, rows: 10,placeholder: "コメントをここに" %></p>
        </div>

        <div class="actions">
          <%= form.submit 'Create Review', class: 'btn btn-outline-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 text-center">
      <h2>レビュー一覧</h2>
        <% @reviews.each do |review| %>
          <div>
            <p><%= review.user.name %></p>
            <p><%= review.rate %>/5点</p>
            <p><%= review.body %></p>
            <%= link_to 'Delete', movie_destroy_path(@movie, review), method: :delete, data: { confirm: '削除しますか？' } %>
          </div>
        <% end %>
    </div>
  </div>
</div>